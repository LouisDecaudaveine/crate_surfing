generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Track {
    track_id    BigInt      @id
    name        String?     @default("Untitled")
    artist      String?
    album       String?
    kind        String?
    size        BigInt?
    total_time  Int?
    average_bpm Float?
    date_added  DateTime?
    sample_rate Int?
    play_count  Int?        @default(0)
    rating      Int?        @default(0)
    location    String?     
    tonality    String?
}